extends layout

block content-left
    h1 League Table Generator
    p Based on <a href="https://github.com/bakert/League-Table-Generator">bakert/League-Table-Generator</a>

block content-right
    form(action="/", method="POST")
        .form-group
            label(for="title") Table Title
            input.form-control(autofocus, name="title", placeholder="My Table", type="text")
        .form-group
            label(for="results") Enter results in format <code>name X - Y name</code> one per line
            textarea.form-control(rows="15", name="results")
                | Manchester United 1 - 2 Swansea City
                | Leicester City 2 - 2 Everton FC
                | Queens Park Rangers 0 - 1 Hull City
                | Stoke City 0 - 1 Aston Villa
                | West Bromwich Albion 2 - 2 Sunderland AFC
                | West Ham United 0 - 1 Tottenham Hotspur
                | Arsenal FC 2 - 1 Crystal Palace
                | Liverpool FC 2 - 1 Southampton FC
                | Newcastle United 0 - 2 Manchester City
                | Burnley FC 1 - 3 Chelsea FC
                | Aston Villa 0 - 0 Newcastle United
                | Chelsea FC 2 - 0 Leicester City
                | Crystal Palace 1 - 3 West Ham United
                | Everton FC 2 - 2 Arsenal FC
                | Hull City 1 - 1 Stoke City
                | Manchester City 3 - 1 Liverpool FC
                | Southampton FC 0 - 0 West Bromwich Albion
                | Sunderland AFC 1 - 1 Manchester United
                | Swansea City 1 - 0 Burnley FC
                | Tottenham Hotspur 4 - 0 Queens Park Rangers
        .form-group
            label(for="zones") Promotion and relegation zone spots (optional)
            input.form-control.input-sm(value="0", type="number", name="zones")
        .form-group
            button.btn.btn-primary.ladda-button(data-style="zoom-out", type="submit")
                span.ladda-label Submit

    if tables
        hr

        h2 Recently Created

        .row
            ul.inline-list
                each item in tables
                    li.col-lg-3.col-md-4.col-sm-6.columns
                        a(href="#{ item.id }") #{item.title}
                        br
                        span #{moment(item.created_at).format('MMMM Do YYYY')}

        br
