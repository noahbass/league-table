extends layout

block content-left
    h1 League Table Generator
    p An open source, fast and accurate league table generator. Find it on <a href="https://github.com/noahbass/league-table">GitHub</a>.
    p Based on <a href="https://github.com/bakert/League-Table-Generator">bakert/League-Table-Generator</a>

block content-right
    include partials/form

    if data
        hr

        h2 Recently Created

        .row
            ul.inline-list
                each item in data
                    li.col-lg-3.col-md-4.col-sm-6.columns
                        a(href="#{ item.id }") #{ item.data[0].title }
                        br
                        span #{ moment(item.created_at).format('MMMM Do YYYY') }

        br
