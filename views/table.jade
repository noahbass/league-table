extends layout

block content-left
    h1 Table: #{ data.data[0].title }
    p.lead #{ moment(created_at).format('dddd, MMMM Do YYYY') }

    include partials/share

    p <a href="/">Create a new table</a>

block content-right
    div(role="tabpanel")

        ul.nav.nav-tabs(role="tablist")
            li.active(role="presentation")
                a(href="#table", aria-controls="table", role="tab", data-toggle="tab") Table
            li(role="presentation")
                a(href="#input", aria-controls="input", role="tab", data-toggle="tab") Input

        .tab-content
            div.tab-pane.active(role="tabpanel", id="table")
                .table-responsive
                    table.table.table-hover
                        thead
                            tr
                                th #
                                th Team
                                th GP
                                th W
                                th D
                                th L
                                th GF
                                th GA
                                th GD
                                th PTS
                        tbody
                            - var i = 1
                            each item in data.data[0].table
                                if item.zone == 'promotion'
                                    tr(class="success")
                                        th= i++
                                        td= item.name
                                        td= item.played
                                        td= item.wins
                                        td= item.draws
                                        td= item.losses
                                        td= item.for
                                        td= item.against
                                        td= item.diff
                                        td= item.points
                                else if item.zone == 'relegation'
                                    tr(class="danger")
                                        th= i++
                                        td= item.name
                                        td= item.played
                                        td= item.wins
                                        td= item.draws
                                        td= item.losses
                                        td= item.for
                                        td= item.against
                                        td= item.diff
                                        td= item.points
                                else
                                    tr
                                        th= i++
                                        td= item.name
                                        td= item.played
                                        td= item.wins
                                        td= item.draws
                                        td= item.losses
                                        td= item.for
                                        td= item.against
                                        td= item.diff
                                        td= item.points

            div.tab-pane(role="tabpanel", id="input")
                br
                ul.list-unstyled
                    each item in data.data[0].input
                        li= item
